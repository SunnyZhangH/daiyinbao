<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neimeng.daiyinbao.cunqian.dao.IGoodsTyperDao">
      <resultMap id="GoodsTypeResultMap" type="com.neimeng.daiyinbao.cunqian.pojo.GoodsTypeInfo">
          <id column="type_id" property="typeId" />
          <result column="type_name" property="typeName" />
          <result column="type_state" property="typeState" />
          <result column="total_money" property="totalMoney" />
          <result column="total_preson" property="totalPerson" />
      </resultMap>

      <select id="findGoodsType" resultMap="GoodsTypeResultMap">
           select * from goods_type where type_id=#{typeId}
      </select>
    
      <select id="findAllGoodsType" resultMap="GoodsTypeResultMap" resultType="java.util.ArrayList">
          select * from goods_type
      </select>

      <insert id="addGoodsType">
          insert into goods_type values (null,#{typeName},#{typeState},#{totalMoney},#{totalPerson})
      </insert>

      <delete id="delGoodsType">
          delete from goods_type where  type_id=#{typeId}
      </delete>

      <update id="updateGoodsType">
          update goods_type
          <trim prefix="set" suffixOverrides=",">
              <if test="typeName!=null">type_name=#{typeName}</if>
          </trim>
          where  type_id=#{typeId}
      </update>

</mapper>
